<%- include('header.ejs') %>
    <!-- Header Section End -->
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <!-- <div class="text-left logo p-2 px-5">
                    <img src="assets\images\carosal\logo.jpg" width="50">
                </div> -->
                <div class="invoice p-5">
                    <% if (order.paymentStatus=='Pending') { %>
                        <h5 style="color: red;">Your order not Confirmed!</h5>
                        <span class="font-weight-bold d-block mt-4">Hello</span>
                        <span style="color: crimson;">Your order will be confirmed after successful Payment please go to orders page in your profile to make payment!</span>
                    <% } else { %>
                        <h5>Your order Confirmed!</h5>
                    <span class="font-weight-bold d-block mt-4">Hello</span>
                    <span>Your order has been confirmed and will be shipped in the next two days!</span>
                    <% } %>
                    
                    <div class="payment border-top mt-3 mb-3 border-bottom">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>
                                        <% if (order) { %>
                                            <div class="py-2">
                                                <span class="d-block text-muted">Order Date</span>
                                                <span><%= order.orderDate %></span>
                                            </div>
                                        <% } else { %>
                                            <div>Order information is not available.</div>
                                        <% } %>
                                        
                                    </td>
                                    <td>
                                        <div class="py-2">

                                            <span class="d-block text-muted">Order No</span>
                                        <span><%=order.oId%></span>
                                            
                                        </div>
                                    </td>
                                    <td>
                                        <div class="py-2">

                                            <span class="d-block text-muted">Payment</span>
                                        <span>
                                            <%=order.paymentMethod%>
                                            
                                        </div>
                                    </td>

                                    <td>
                                        <div class="py-2">

                                            <span class="d-block text-muted">Shiping Address</span>
                                        <span><%=order.deliveryAddress.addressType%></span>
                                            
                                        </div>
                                    </td>
                                    <!-- Include other details in a similar fashion -->
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="product border-bottom">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>Image</td>
                                    <td>Product name</td>
                                    <td>Quantity</td>
                                    <td>Price</td>
                                </tr>
                                <% for(let i=0; i<order.items.length; i++) { %>
                                <tr>
                                    <td class="product_thumb">
                                        <a href="/user/productdetails?id=<%=order.items[i].productId %>">
                                            <img src="/product/<%=order.items[i].image%>" alt="" style="width: 60px;">
                                        </a>
                                    </td>
                                    <td class="product_name">
                                        <a href="/user/productdetails?id=<%=order.items[i].productId %>">
                                            <%=order.items[i].name%>
                                        </a>
                                    </td>
                                    <td>
                                        <div class="detail-qty  radius  m-auto">
                                       
                                        <span class="qty-val me-3"
                                            id="qty-<%= order.items[i]._id  %>"><%= order.items[i].quantity %></span>
                                        
                                    </div>
                                        </td>
                                        <td class="product_total">Rs.<%=order.items[i].price%>.00</td>
                                    <!-- Include other item details in a similar fashion -->
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="row d-flex justify-content-end">
                        <div class="col-md-5">
                            <table class="table table-borderless">
                                <tbody class="totals">
                                    <tr>
                                        <td>
                                            <div class="text-left">
                                                <span class="text-muted">Subtotal</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-right">
                                                <span>Rs.<%=order.billTotal%>.00</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- Include other subtotal details if needed -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <p>We will be sending a shipping confirmation email when the item is shipped successfully!</p>
                    <p class="font-weight-bold mb-0">Thanks for shopping with us!</p>
                    <span> Athlete</span>
                </div>
                <div class="d-flex justify-content-between footer p-3" style="background-color: white; color: black;">
                    <span>Need Help? Visit our <a href="#" style="color: black;">help center</a></span>
                    <span><a href="/users/shop" style="color: black;">Continue Shopping</a></span>
                </div>
                
            </div>
        </div>
    </div>
    </section>

    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__logo">
                            <a href="#"><img src="/img/footer-logo.png" alt=""></a>
                        </div>
                        <p>The customer is at the heart of our unique business model, which includes design.</p>
                        <a href="#"><img src="/img/payment.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-2 offset-lg-1 col-md-3 col-sm-6">
                    <div class="footer__widget">
                        <h6>Shopping</h6>
                        <ul>
                            <li><a href="#">Sports Store</a></li>
                            <li><a href="#">Trending Shoes</a></li>
                            <li><a href="#">Accessories</a></li>
                            <li><a href="#">Sale</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6">
                    <div class="footer__widget">
                        <h6>Shopping</h6>
                        <ul>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Payment Methods</a></li>
                            <li><a href="#">Delivary</a></li>
                            <li><a href="#">Return & Exchanges</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1 col-md-6 col-sm-6">
                    <div class="footer__widget">
                        <h6>NewLetter</h6>
                        <div class="footer__newslatter">
                            <p>Be the first to know about new arrivals, look books, sales & promos!</p>
                            <form action="#">
                                <input type="text" placeholder="Your email">
                                <button type="submit"><span class="icon_mail_alt"></span></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="footer__copyright__text">
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        <p>Copyright ©
                            <script>
                                document.write(new Date().getFullYear());
                            </script>2020
                            All rights reserved | This template is made with <i class="fa fa-heart-o"
                            aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                        </p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->

    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
