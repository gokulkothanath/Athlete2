    <script>
        function removeMessages() {
            const errorMessages = document.querySelectorAll('.text-danger');
            const successMessages = document.querySelectorAll('.text-success');
    
            errorMessages.forEach(messageElement => {
                setTimeout(() => {
                    messageElement.style.display = 'none';
                }, 5000); 
            });
    
            successMessages.forEach(messageElement => {
                setTimeout(() => {
                    messageElement.style.display = 'none';
                }, 5000); 
            });
        }
    
        window.onload = function() {
            removeMessages();
        };
    </script>
    <script>
        // Function to validate the form
        function validateForm() {
            // Get form inputs
            const nameInput = document.querySelector('input[name="name"]');
            const mobileInput = document.querySelector('input[name="mobile"]');
            const nameError = document.getElementById('nameError');
            const mobileError = document.getElementById('mobileError');
    
            // Regular expressions for validation
            const nameRegex = /^[A-Z][a-z]+(?: [A-Z][a-z]+)*$/;
            const mobileRegex = /^(9|6)\d{9}$/;
    
            // Validate name
            if (!nameRegex.test(nameInput.value)) {
                nameError.textContent = 'Invalid name format!';
                nameError.style.color = 'red';
                return false;
            } else {
                nameError.textContent = '';
            }
    
            // Validate mobile number
            if (!mobileRegex.test(mobileInput.value)) {
                mobileError.textContent = 'Invalid mobile number format!';
                mobileError.style.color = 'red';
                return false;
            } else {
                mobileError.textContent = '';
            }
    
            // Form is valid
            return true;
        }
    </script>
    
